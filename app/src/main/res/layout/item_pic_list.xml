<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_img_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:fadeDuration="2000"
        app:failureImage="@mipmap/ic_launcher"
        app:failureImageScaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/icon_pic_default"
        app:placeholderImageScaleType="centerInside"
        app:progressBarAutoRotateInterval="5000"
        app:progressBarImage="@drawable/icon_add"
        app:progressBarImageScaleType="fitCenter"
        app:retryImage="@drawable/ic_retry"
        app:retryImageScaleType="fitCenter"
        app:roundedCornerRadius="30dp" />
</androidx.constraintlayout.widget.ConstraintLayout>